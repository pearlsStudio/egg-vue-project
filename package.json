{
  "name": "egg-project",
  "version": "1.1.1",
  "description": "A FE template of Jdcloud with skeletons",
  "scripts": {
    "serve": "cd client && npm run serve",
    "dev": "cd server && npm run dev",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "postinstall": "npm-run-all install:*",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint": "eslint . --ext .js,.vue --fix",
    "lint-jenkins": "eslint . --ext .js,.vue -f jslint-xml -o output.xml"
  },
  "keywords": [],
  "author": "liuhuanli <liuhuanli@jd.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/eslint-config-prettier": "^3.0.0-rc.3",
    "chalk": "^2.4.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-vue": "^4.5.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verify-commit-msg.js"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint",
      "git add"
    ]
  }
}
